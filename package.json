{
  "name": "honey-css-modules-monorepo",
  "type": "module",
  "repository": "https://github.com/mizdra/honey-css-modules.git",
  "author": "mizdra <pp.mizdra@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/codegen",
    "packages/ts-plugin",
    "packages/language-server",
    "packages/vscode",
    "packages/stylelint-plugin"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "lint": "run-s -c lint:*",
    "lint:tsc": "tsc -b",
    "lint:eslint": "eslint --cache --cache-strategy content .",
    "lint:prettier": "prettier --cache --check .",
    "test": "run-s -c test:build test:vitest",
    "test:build": "npm run build",
    "test:vitest": "vitest --no-watch",
    "test-watch": "run-p test-watch:*",
    "test-watch:build": "npm run build -- --watch --preserveWatchOutput",
    "test-watch:vitest": "vitest --watch"
  },
  "prettier": "@mizdra/prettier-config-mizdra",
  "devDependencies": {
    "@mizdra/eslint-config-mizdra": "^6.0.0",
    "@mizdra/inline-fixture-files": "^2.0.0",
    "@mizdra/prettier-config-mizdra": "^2.0.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.10.2",
    "@types/postcss-safe-parser": "^5.0.4",
    "@types/react": "^19.0.8",
    "@types/vscode": "^1.96.0",
    "@typescript/server-harness": "^0.3.5",
    "dedent": "^1.5.3",
    "eslint": "^9.17.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "stylelint": "^16.13.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.2"
  }
}

{
  "name": "css-modules-kit-monorepo",
  "type": "module",
  "repository": "https://github.com/mizdra/css-modules-kit.git",
  "author": "mizdra <pp.mizdra@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/codegen",
    "packages/ts-plugin",
    "packages/language-server",
    "packages/vscode",
    "packages/stylelint-plugin",
    "packages/eslint-plugin"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "lint": "run-s -c lint:*",
    "lint:tsc": "tsc -b",
    "lint:eslint": "eslint --cache --cache-strategy content .",
    "lint:prettier": "prettier --cache --check .",
    "test": "vitest --project unit",
    "e2e": "run-s -c e2e:build e2e:vitest",
    "e2e:build": "npm run build",
    "e2e:vitest": "vitest --project e2e"
  },
  "prettier": "@mizdra/prettier-config-mizdra",
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/css": "^0.4.0",
    "@mizdra/eslint-config-mizdra": "^6.1.0",
    "@mizdra/inline-fixture-files": "^2.1.1",
    "@mizdra/prettier-config-mizdra": "^2.0.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.13.10",
    "@types/postcss-safe-parser": "^5.0.4",
    "@types/react": "^19.0.10",
    "@types/vscode": "^1.98.0",
    "@typescript/server-harness": "^0.3.5",
    "@vscode/vsce": "^3.2.2",
    "dedent": "^1.5.3",
    "eslint": "^9.22.0",
    "npm-run-all2": "^7.0.2",
    "ovsx": "^0.10.1",
    "prettier": "^3.5.3",
    "stylelint": "^16.17.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
